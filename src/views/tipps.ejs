<div class="inline-form">
    <div class="card border-0 shadow-lg p-3 mb-5 bg-white rounded" id="card" style="width: 80%;">
        <div class="card-body">
            <form novalidate>

                    <div class="form-groud">
                            <img class="card-img-top" src="tipps.png" alt="Card image cap" style="width: 80%; display: block; margin-left: auto; margin-right: auto;">
                            <h6 align="center">vom <%= gameday.day %></h6>
                            </br>
                        </div>

                <% for (i = 0; i < tipps.length; i++) { %>
                    <div class="form-groud">
                            <h4 style="font-family: Orbitron">
                                <%= tipps[i].player %>
                            </h4>
                            </br>
                        </div>

                        <% for (g = 0; g < tipps[i].games.length; g++) { %>

                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-5">
                                        <div class="form-group">
                                            <label class="font-weight-bold" for="home<%= g %>"><%= tipps[i].games[g].homeTeam %></label>
                                            <select disabled class="form-control" name="home<%= g %>" id="home<%= g %>">
                                              <option><%= tipps[i].games[g].tipp.split(':')[0] %></option>
                                            </select>
                                          </div>
                                    </div>
                                    <div class="col-2">
                                            <label for="vs<%= g %>" class="text-light">
                                                text
                                                </label>
                                                <input type="text" id="vs<%= g %>" readonly class="form-control-plaintext text-center" value="vs.">
                                    </div>
                                    <div class="col-5">
                                        <div class="form-group">
                                            <label class="font-weight-bold" for="away<%= g %>"><%= tipps[i].games[g].awayTeam %></label>
                                            <select disabled class="form-control" name="away<%= g %>" id="away<%= g %>">
                                              <option><%= tipps[i].games[g].tipp.split(':')[1] %></option>
                                            </select>
                                          </div>
                                    </div>
                                </div>
                            </div>
        
                            
        
                            <% } %>
                        </br>
                <% } %>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-dark btn-lg btn-block" formmethod="GET" formaction="/" formtarget="_self">Zur√ºck</button>
                        </div>

            </form>
        </div>
    </div>
</div>
