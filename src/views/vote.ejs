<div class="inline-form">
    <div class="card border-0 shadow p-3 mb-5 bg-white rounded" id="card" style="width: 95%;">
        <div class="card-body">
            <form>
                <input name="day" type="hidden" value="<%= day %>" />
                <input name="player" type="hidden" value="<%= player %>" />
                <input name="games" type="hidden" value="<%= games %>" />

                <div class="form-groud">
                    <h4>
                        <%= name %>
                    </h4>
                    </br>
                </div>

                <% for (i = 0; i < games.length; i++) { %>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-5">
                                <label for="home<%= i %>">
                                    <%= games[i].homeTeam %>
                                </label>
                                <input type="number" name="home<%= i %>" id="home<%= i %>" class="form-control">
                            </div>
                            <div class="col-2">
                                    <label for="vs<%= i %>" class="text-light">
                                        text
                                        </label>
                                        <input type="text" id="vs<%= i %>" readonly class="form-control-plaintext text-center" value="vs.">
                            </div>
                            <div class="col-5">
                                <label for="away<%= i %>">
                                    <%= games[i].awayTeam %>
                                </label>
                                <input type="number" name="away<%= i %>" id="away<%= i %>" class="form-control">
                            </div>
                        </div>
                    </div>

                    <% } %>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-dark btn-lg btn-block" formmethod="POST" formaction="/createGameday" formtarget="_self">Speichern</button>
                        </div>

            </form>
        </div>
    </div>
</div>

